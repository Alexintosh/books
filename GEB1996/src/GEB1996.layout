Format 11
Columns                 1
Sides                   1
PageStyle               Headers
#Provides natbib-internal   1
#Provides url       1

Input stdclass.inc
Preamble
    % 自定义页边距
    \RequirePackage[paperwidth=9cm,paperheight=12cm,top=0.5cm,bottom=0.5cm,left=0.5cm,right=1cm]{geometry}
    \special{papersize=9cm,12cm}
    \RequirePackage{xkeyval}
    
    %\setmainfont{SimSun-18030}
    %\setsansfont{Komika Text}

    % 设置字体
    \RequirePackage[boldfont,slantfont,CJKnumber,CJKchecksingle,fallback]{xeCJK} % 允许粗体,斜体,支持\CJKnumber{\thechapter}
	
    % CJK 全局选项
    \defaultCJKfontfeatures{AutoFakeBold=6,AutoFakeSlant=.4}
    % AutoFakeBold   设定粗体字要多粗
    % AutoFakeSlant  设定斜体字要多斜，范围-0.999到0.999，负值往左斜

    \setCJKmainfont{方正书宋_GB18030}  % 设置正文罗马族的 CJK 字体，影响 \rmfamily 和 \textrm 的字体
    \setCJKsansfont{方正楷体_GB18030}  % 设置正文无衬线族的 CJK 字体，影响 \sffamily 和 \textsf 的字体
    \setCJKmonofont{方正黑体_GB18030}  % 设置正文等宽族的 CJK 字体，影响 \ttfamily 和 \texttt 的字体

    % 定义指令切换字体
    \newCJKfontfamily\CJKFontSong{方正书宋_GB18030}
    \newCJKfontfamily\CJKFontKai{方正楷体_GB18030}
    \newCJKfontfamily\CJKFontHei{方正黑体_GB18030}
    
    \punctstyle{kaiming} % 标点处理，开明式

    % 中文断行
    \XeTeXlinebreaklocale "zh"
    \XeTeXlinebreakskip = 0pt plus 1pt minus 0.1pt

    % 默认在点号、感叹号等后面放上比逗号更大的空隙，关闭这个功能
    \frenchspacing
    % 禁止寡行（一个段落的最后一行出现在页首）的出现
    \widowpenalty=10000

    % 默认将段间距设为所谓的橡皮长度，禁止段间距不一致的，段间距就和行间距一样
    \setlength\parskip{0pt plus 1pt minus 0.1pt}

    % 调整一个段落的左右缩进
    \usepackage{changepage}

    % 首行缩进
    %\RequirePackage{indentfirst}
    \setlength{\parindent}{2em}

    % 定制章节的格式
    \usepackage[compact,calcwidth,pagestyles]{titlesec}    % compact 使用压缩格式

    \newcommand{\starmark}{}
    \newenvironment{addstarbefore}
        {\renewcommand{\starmark}{*}}
        {}

    \titleclass{\part}{top} % make part like a chapter
    \titleformat{\part}[display]
	{\CJKFontHei\large\centering}
	{\starmark \thepart}
	{1em}
	{}
	[]
    
    \titlespacing*{\part}
	{0pt}
	{0pt}
	{20pt}

    % 章节标题
    %\renewcommand\thechapter{\arabic{chapter}}
    %\renewcommand\thechapter{第\CJKnumber{\arabic{chapter}}章}
    \titleformat{\chapter}          % display 序号和标题分别占用两行
        {\large\centering}          % format 标题格式
        {\starmark 第\CJKnumber{\thechapter}章}     % label 用于定义定义标题的标签,就是标题内容前面的标号
        {1em}                       % sep 定义标题的标签与标题内容之间的间隔距离
        {}                          % before 用于在标题内容前再加些内容
        []                          % after 用于在标题内容后再加些内容
    \titlespacing*{\chapter}
       {0pt}% left
       {0em}% before
       {0em}% after

    % 节标题
    %\renewcommand{\sectionrname}{}
    %\renewcommand\thesection{\arabic{chapter}.\arabic{section}}
    \titleformat{\section}
        {\CJKFontHei\centering}
        {\starmark \arabic{chapter}.\arabic{section}}
        {1em}
        {}
        
    % 定制目录格式
    \RequirePackage{titletoc}

    \titlecontents{part}[0pt]
        {\addvspace{0.5pc}%
        \filcenter}
        {\CJKFontHei\thecontentslabel\\*[.2pc]}
        {\CJKFontHei}
        {} % That is, without page number
        [\addvspace{.5pc}]

    \titlecontents{chapter}[0pt]   % left
        {\addvspace{2pt}\filright}  % above-code
        {\contentspush{第\CJKnumber{\thecontentslabel}章\quad}}    % numbered-entry-format
        {}    % numberless-entry-format
        {\titlerule*[8pt]{.}\contentspage}  % filler-page-format
        []  % below code
        
    \titlecontents{section}[1em]   % left
        {\addvspace{2pt}\filright}  % above-code
        {\contentspush{\thecontentslabel\quad}}    % numbered-entry-format
        {}    % numberless-entry-format
        {\titlerule*[8pt]{.}\contentspage}  % filler-page-format
        []  % below code

    % 定制页脚
    %\newpagestyle{版式名称}[页眉页脚字体]{页眉页脚样式}
    %\sethead[偶页眉左][偶页眉中][偶页眉右]{奇页眉左}{奇页眉中}{奇页眉右}
    %\setfoot[偶页脚左][偶页脚中][偶页脚右]{奇页脚左}{奇页脚中}{奇页脚右}
    \renewpagestyle{plain}{
        \setfoot[$\cdot$\ \thepage\ $\cdot$][][]{}{}{$\cdot$\ \thepage\ $\cdot$}
    }
    \newpagestyle{main}{
        \setfoot[$\cdot$\ \thepage\ $\cdot$][][]{}{}{$\cdot$\ \thepage\ $\cdot$}
    }
    \pagestyle{main}

    % 下划线折行和着重号
    \RequirePackage{color}  % 需要顏色放前面, 不需要顏色放後面
    \RequirePackage{CJKfntef}
    % \CJKunderdot{中文}

    % 中文文档习惯
    \renewcommand{\contentsname}{目录}
    \renewcommand{\listfigurename} {插图目录}
    \renewcommand{\listtablename} {表格目录}
    %\renewcommand{\refname}{参考文献}
    %\renewcommand{\abstractname}{摘要}
    \renewcommand{\indexname}{索引}
    \renewcommand{\tablename}{表}
    \renewcommand{\figurename}{图}

    % 图的编号改成 1.1 的方式，清零用“\setcounter{figure}{0}”
    \renewcommand{\thefigure}{\arabic{figure}}
    \RequirePackage[font=small,labelsep=quad]{caption}

    \setlength{\abovecaptionskip}{0ex} %caption和图像之间的距离
    \setlength{\belowcaptionskip}{-3ex} %caption和下方文字的距离

    % footnote
    \usepackage[perpage, hang]{footmisc} % 分页计数
    \renewcommand{\thefootnote}{\scriptsize{\textcircled{\tiny{\arabic{footnote}}}}} % 编号带圈
    
    \let\OriginalMarginpar\marginpar
    \def\marginpar#1{\OriginalMarginpar{\footnotesize #1}}

EndPreamble

# Default textclass options. The user may need to modify this.
ClassOptions
    Other                 "unicode"#,doctor"
End

# 参考 logicalmkup.module
InsetLayout Flex:CJKunderdot
    LyxType               charstyle
    LabelString           underdot
    LatexType             command
    LatexName             underdot
    Font
      color               blue
    EndFont
    Preamble
        \newcommand{\underdot}[1]{\CJKunderanysymbol{0.4em}{.}{#1}}
    EndPreamble
    InToc                 true
    HTMLTag               strong
End

Style Standard
    Category              MainText
    Margin                Dynamic
    LeftMargin            ""
    LatexType             Paragraph
    LatexName             dummy
    ParIndent             MM
    ParSkip               0.4
    Align                 Block
    AlignPossible         Block, Left, Right, Center
    LabelType             No_Label
    # FIXME This ought to be set dynamically.
    HTMLStyle
        div.standard {
            margin-bottom: 2ex;
        }
    EndHTMLStyle
End

Style CenterLine
        CopyStyle Standard
    LatexType             Command
    LatexName             centerline
    Align                 Center
End

Style RightLine
        CopyStyle Standard
    LatexType             Command
    LatexName             rightline
    Align                 Right
End

