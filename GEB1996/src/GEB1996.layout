Style Standard
    CopyStyle             Standard
    ParIndent             MMN
End

Style CenterLine
    CopyStyle             Standard
    LatexType             Command
    LatexName             centerline
    Align                 Center
End

Style RightLine
    CopyStyle             Standard
    LatexType             Command
    LatexName             rightline
    Align                 Right
End

Style Part
    CopyStyle       Part
    Category        Sectioning
	NextNoIndent    0
    Labelsep        xxx
    Align           Center
    Alignpossible   Center
    Font
        Family      Typewriter
        Series      Default
        Size        Huge
    EndFont
End

Style Part-toc*
    CopyStyle       Part
    Category        Unnumbered
    Margin          Static
    LatexName       partoc
    LabelType       No_Label
    LabelCounter    ""
    ResetArgs       1
    Preamble
        \newenvironment{partoc}[1]{
        \part*{#1\addcontentsline{toc}{part}{#1}}
        }{}
    EndPreamble
End

Style Chapter
    CopyStyle       Chapter
    Margin          Dynamic       # Static
    LabelType       Static        # Above
	NextNoIndent    0
    LabelSep        xx
    Align           Center
    Font
        Series      Default
        Size        Largest
    EndFont
End

Style Chapter-toc*
    CopyStyle       Chapter
    Category        Unnumbered
    Margin          Static
    LatexName       chaptertoc
    LabelType       No_Label
    LabelCounter    ""
    ResetArgs       1
    Preamble
        \newenvironment{chaptertoc}[1]{
            \chapter*{#1\addcontentsline{toc}{chapter}{#1}}
        }{}
    EndPreamble
End

Style Section
    CopyStyle       Section
	NextNoIndent    0
    Align           Center
    Font
      Series        Default
      Size          Larger
    EndFont
End

Style Section*
    CopyStyle       Section
    Category        Unnumbered
    Margin          Static
    LatexName       section*
    LabelType       No_Label
    LabelCounter    ""
    ResetArgs       1
End

Style Section-toc*
    CopyStyle       Section
    Category        Unnumbered
    Margin          Static
    LatexName       sectiontoc
    LabelType       No_Label
    LabelCounter    ""
    ResetArgs       1
    Preamble
        \newenvironment{sectiontoc}[1]{
        \section*{#1\addcontentsline{toc}{section}{#1}}
        }{}
    EndPreamble
End

Style Subsection
    CopyStyle       Section
    LabelCounter    subsection
    TocLevel        2
    LatexName       subsection
    TopSep          0.9
    BottomSep       0.5
    ParSep          0.5
	NextNoIndent    0
    Align           Center
    Font
        Family      Typewriter
        Size        Normal
    EndFont
    HTMLTag         h3
End

Style Subsection*
    CopyStyle       Subsection
    Category        Unnumbered
    Margin          Static
    LatexName       subsection*
    LabelType       No_Label
    LabelCounter    ""
    ResetArgs       1
End

Style Enumerate
    CopyStyle       Enumerate
    LeftMargin      MMMMMMN
    OptionalArgs    1
End

Counter enumi
    LabelString     "（\arabic{enumi}）"
End

