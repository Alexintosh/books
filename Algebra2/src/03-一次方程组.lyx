\begin_inset space \hfill{}
\end_inset


\begin_inset Formula $\begin{cases}
m=-3,\\
n=4,\\
a=-11,\\
b=4.
\end{cases}$
\end_inset


\begin_inset space \hfill{}
\end_inset


\end_layout

